{
  "name": "vitzik",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "start": "npx lerna run start",
    "build": "npx lerna run build",
    "test": "npx lerna run test",
    "test:watch": "npx lerna run test --coverage",
    "test:staged": "npx lerna run test --findRelatedTests --watchAll=false",
    "prepare": "husky install",
    "deploy": "gh-pages -d packages/vitzik-domain/build"
  },
  "lint-staged": {
    "**/*": [
      "prettier --write --ignore-unknown"
    ],
    "src/**/*.(ts|tsx)": [
      "npm run test:staged"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^17.0.0",
    "@commitlint/config-conventional": "^17.0.0",
    "@testing-library/jest-dom": "^5.16.4",
    "@testing-library/react": "^13.2.0",
    "@testing-library/user-event": "^14.3.0",
    "@types/jest": "^28.1.6",
    "@types/node": "^18.6.2",
    "eslint-plugin-unused-imports": "^2.0.0",
    "gh-pages": "^4.0.0",
    "husky": "^8.0.0",
    "lerna": "^5.4.3",
    "prettier": "^2.6.2",
    "save-dev": "*",
    "typescript": "^4.7.2"
  },
  "workspaces": [
    "packages/*"
  ]
}
