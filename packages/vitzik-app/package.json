{
  "name": "vitzik-app",
  "version": "0.1.0",
  "private": true,
  "homepage": "./",
  "dependencies": {
    "@popperjs/core": "^2.11.5",
    "@types/react-transition-group": "^4.4.5",
    "clsx": "^1.1.0",
    "lodash": "^4.5.0",
    "midi-json-parser": "^8.1.7",
    "react": "^18.1.0",
    "react-device-detect": "^2.2.2",
    "react-dom": "^18.1.0",
    "react-popper": "^2.3.0",
    "react-scripts": "5.0.1",
    "react-transition-group": "^4.4.2",
    "soundfont-player": "^0.12.0",
    "vexflow": "^4.0.3",
    "vitzik-ui": "^0.1.0",
    "web-vitals": "^2.1.4"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts ../vitzik-domain/build",
    "test": "react-scripts test --watchAll=false --coverage",
    "test:watch": "react-scripts test --coverage",
    "test:staged": "react-scripts test --findRelatedTests --watchAll=false",
    "eject": "react-scripts eject",
    "deploy": "gh-pages -d ../vitzik-domain/build"
  },
  "lint-staged": {
    "**/*": [
      "prettier --write --ignore-unknown"
    ],
    "src/**/*.(ts|tsx)": [
      "npm run test:staged"
    ]
  },
  "jest": {
    "coveragePathIgnorePatterns": [
      "/src/types",
      "/src/tests",
      "/src/reportWebVitals.js",
      "/src/utils/const",
      "/index.js",
      "/index.ts"
    ]
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ],
    "plugins": [
      "unused-imports"
    ],
    "rules": {
      "no-unused-vars": "off",
      "unused-imports/no-unused-imports": "error",
      "unused-imports/no-unused-vars": [
        "warn",
        {
          "vars": "all",
          "varsIgnorePattern": "^_",
          "args": "after-used",
          "argsIgnorePattern": "^_"
        }
      ]
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^17.0.0",
    "@commitlint/config-conventional": "^17.0.0",
    "@testing-library/jest-dom": "^5.16.4",
    "@testing-library/react": "^13.2.0",
    "@testing-library/user-event": "^14.3.0",
    "@types/jest": "^28.1.6",
    "@types/lodash": "^4.5.6",
    "@types/node": "^18.6.2",
    "@types/react": "^18.0.9",
    "@types/react-dom": "^18.0.5",
    "@types/vexflow": "^1.2.38",
    "babel-plugin-named-exports-order": "^0.0.2",
    "eslint-plugin-unused-imports": "^2.0.0",
    "gh-pages": "^4.0.0",
    "lerna": "^5.4.3",
    "prettier": "^2.6.2",
    "sass": "^1.52.1",
    "save-dev": "*",
    "typescript": "^4.7.2",
    "webpack": "^5.72.1"
  }
}
