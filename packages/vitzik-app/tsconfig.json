{
    "compilerOptions": {
        "paths": {
            "@/*": ["./src/*"]
        },
        "lib": ["dom", "dom.iterable", "esnext"],
        "target": "ESNext",
        "types": [
            "vite/client",
            "vitest/globals",
            "node",
            "@testing-library/jest-dom"
        ],
        "isolatedModules": true,
        "jsx": "react",
        "moduleResolution": "Node",
        "module": "esnext",
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true
    },
    "include": ["src"],
    "exclude": ["node_modules", "dist"]
}
